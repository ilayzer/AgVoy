{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Summary</th>
            <th>Description</th>
            <th>Capacity</th>
            <th>Superficy</th>
            <th>Price</th>
            <th>Address</th>
            <th>ImageName</th>
            <th>ContentType</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.summary }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.superficy }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.address }}</td>
                <td>{{ room.imageName }}</td>
                <td>{{ room.contentType }}</td>
                <td>
                    <a href="{{ path('room_owner_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_owner_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_owner_new') }}">Create new</a>
{% endblock %}
